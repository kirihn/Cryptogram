<Window x:Class="Cryptogram.View.Registration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cryptogram.View"
        xmlns:ui="clr-namespace:Cryptogram.UI"
        mc:Ignorable="d"
        ResizeMode="CanMinimize"
        Title="Registration" Height="630" Width="900" WindowStartupLocation="CenterScreen" >
    <Window.CommandBindings>
        <CommandBinding Command="ui:ExitCommand.Exit" Executed="Exit_Executed"/>
    </Window.CommandBindings>
    <Grid Background="#514E54">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="450"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="100"/>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Column="0" Grid.ColumnSpan="3" Background="#2F2F2F" >
            <Image Height="40" Source="..\IMG\Icon\LogInLogo.png" RenderOptions.BitmapScalingMode="HighQuality" Margin="10" HorizontalAlignment="Left"/>
        </StackPanel>
        
        <StackPanel Grid.Row="1" Grid.ColumnSpan="3">
            <TextBlock Style="{StaticResource SloganText}" HorizontalAlignment="Center">Welcome to Cryptogram</TextBlock>
            <TextBlock Style="{StaticResource SloganText}" HorizontalAlignment="Center">Share your most intimate safely</TextBlock>
        </StackPanel>

        <WrapPanel Grid.Row="2" Grid.Column="1" HorizontalAlignment="Center" >
            <StackPanel Margin="5">
                <TextBlock Margin="5 0 5 5" Text="{DynamicResource Loc_Reg2Name}"/>
                <ui:CustomTextBox Width="210px" BaseText="{DynamicResource Loc_Reg2InpName}"/>
            </StackPanel>
            <StackPanel Margin="5">
                <TextBlock Margin="5 0 5 5" Text="{DynamicResource Loc_Reg2LastName}"/>
                <ui:CustomTextBox Width="210px" BaseText="{DynamicResource Loc_Reg2InpLastName}"/>
            </StackPanel>
            <StackPanel Margin="5">
                <TextBlock Margin="5 0 5 5" Text="{DynamicResource Loc_Reg2Email}"/>
                <ui:CustomTextBox Width="210px" BaseText="{DynamicResource Loc_LogEmail}"/>
            </StackPanel>
            <StackPanel Margin="5">
                <TextBlock Margin="5 0 5 5" Text="{DynamicResource Loc_Reg2UserName}"/>
                <ui:CustomTextBox Width="210px" BaseText="{DynamicResource Loc_Reg2InpUserName}"/>
            </StackPanel>
            <StackPanel Margin="5">
                <TextBlock Margin="5 0 5 5" Text="{DynamicResource Loc_LogPass}"/>
                <ui:CustomTextBox Width="210px" BaseText="{DynamicResource Loc_RegPass}"/>
            </StackPanel>
            <StackPanel Margin="5">
                <TextBlock Margin="5 0 5 5" Text="{DynamicResource Loc_LogPass}"/>
                <ui:CustomTextBox Width="210px" BaseText="{DynamicResource Loc_RegRepPass}"/>
            </StackPanel>
            <StackPanel Margin="5">
                <TextBlock Margin="5 0 5 5" Text="{DynamicResource Loc_Reg3EncryptKey}"/>
                <ui:CustomTextBox x:Name="KeyHolder" Width="430px" BaseText="{DynamicResource Loc_Reg3Key}"/>
            </StackPanel>
            <WrapPanel Width="430" Margin="5">
                <StackPanel Width="215">
                    <TextBlock Style="{DynamicResource HyperText}" MouseDown="GetMoreInformation" Text="{DynamicResource Loc_Reg3Info}"/>
                </StackPanel>
                <StackPanel Width="215">
                    <TextBlock Style="{DynamicResource HyperText}" MouseDown="GetRandomKey" Text="{DynamicResource Loc_Reg3UseBaseKey}"/>
                </StackPanel>
            </WrapPanel>
            
            <ui:PrivatePolicy Width="430px"/>

            <StackPanel Width="440">
                <Button Style="{DynamicResource InpImgButton}" Content="{DynamicResource Loc_Reg2ChooseIMG}"/>
            </StackPanel>
            
        </WrapPanel>

        <WrapPanel Grid.Row="3" Grid.Column="1" HorizontalAlignment="Center">
            <DockPanel Width="325">
                <Button Command="ui:ExitCommand.Exit" Style="{DynamicResource StepButton}" Content="{DynamicResource Loc_Reg2Back}" />
                <Button Style="{DynamicResource StepButton}" Content="{DynamicResource Loc_Reg2Continue}" HorizontalAlignment="Right"/>
            </DockPanel>
        </WrapPanel>


    </Grid>
</Window>
