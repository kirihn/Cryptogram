<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:v="clr-namespace:System;assembly=mscorlib">


    <!--******************** Authorization window ********************-->

    <v:String x:Key="Authorization">Authorization</v:String>

    <!-- Log in Page (Log) -->
    <v:String x:Key="LogEmail">Email</v:String>
    <v:String x:Key="LogPass">Password</v:String>
    <v:String x:Key="LogLog">Log in</v:String>
    <v:String x:Key="LogSign">Sign up</v:String>

    <!-- Reg Pages (Log) -->
    <v:String x:Key="RegEmail">Input your email...</v:String>
    <v:String x:Key="RegPass">Input your password...</v:String>
    <v:String x:Key="RegRepPass">Repeat password...</v:String>
    <v:String x:Key="RegCreateAcc">Create account</v:String>

    <!-- 2 step registration (Reg2) -->
    <v:String x:Key="Reg2Welc">Welcome to Cryptogram</v:String>
    <v:String x:Key="Reg2Slogan">Share your most intimate safely</v:String>
    <v:String x:Key="Reg2Name">Name</v:String>
    <v:String x:Key="Reg2InpName">Input your name...</v:String>
    <v:String x:Key="Reg2LastName">Last name</v:String>
    <v:String x:Key="Reg2InpLastName">Input your last Name...</v:String>
    <v:String x:Key="Reg2UserName">Input username...</v:String>
    <v:String x:Key="Reg2ChooseIMG">Choose image</v:String>
    <v:String x:Key="Reg2Back">Back</v:String>
    <v:String x:Key="Reg2Continue">Continue</v:String>

    <!-- 3 step registration (Reg3) -->
    <v:String x:Key="Reg3Welc">Cryptogram</v:String>
    <v:String x:Key="Reg3Slogan">Share your most intimate safely</v:String>
    <v:String x:Key="Reg3Key">Input your encryption key...</v:String>
    <v:String x:Key="Reg3Info">Get more information</v:String>
    <v:String x:Key="Reg3UseBaseKey">Use base encryption key</v:String>
    <v:String x:Key="Reg3Message">Input any massage...</v:String>
    <v:String x:Key="Reg3CryptoMessage">It’s look like...</v:String>
    <v:String x:Key="Reg3Back">Back</v:String>
    <v:String x:Key="Reg3Continue">Continue</v:String>

</ResourceDictionary>
